{
  /* inherit sensible defaults & perf-focused rules from Next.js */
  "extends": "next/core-web-vitals",

  "compilerOptions": {
    /* ——— extra project flags ——— */
    "strict": true,
    "forceConsistentCasingInFileNames": true,

    /* ——— path aliases ——— */
    "baseUrl": ".",                      // allow "@/…" absolute imports
    "paths": {
      "@/*": ["./*"],
      /* map every `import Image from "next/image"` to our lazy wrapper */
      "next/image": ["components/LazyImage.tsx"]
    }
  },

  /* keep TypeScript happy when scanning files */
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
