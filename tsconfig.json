{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,

    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "incremental": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]              // keep any existing "@/foo" imports
      /*  â¬…  no mapping for next/image here */
    },

    "plugins": [{ "name": "next" }]
  },

  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
