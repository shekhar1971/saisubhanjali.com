{
  "compilerOptions": {
    /* ---------- strict & perf ---------- */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,

    /* ---------- module / JSX ---------- */
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "incremental": true,

    /* ---------- path aliases ---------- */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],                                // (optional) existing alias
      "next/image": ["components/LazyImage.tsx"]     // ‚Üê **TypeScript** sees wrapper
    },

    /* Next.js lint / TS plugin */
    "plugins": [{ "name": "next" }]
  },

  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
