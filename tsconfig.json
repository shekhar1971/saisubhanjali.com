{
  /* inherit sensible defaults & build-time settings from Next JS */
  "extends": "./node_modules/next/tsconfig.json",

  "compilerOptions": {
    /* ——— project-wide flags ——— */
    "strict": true,
    "forceConsistentCasingInFileNames": true,

    /* ——— path aliases ——— */
    "baseUrl": ".",                 // allow "@/…" absolute imports
    "paths": {
      "@/*": ["./*"],               // (leave out if you don’t use “@/”)
      /* every `import Image from "next/image"` now points to our wrapper */
      "next/image": ["components/LazyImage.tsx"]
    }
  },

  /* let TypeScript know which files belong to the project */
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
