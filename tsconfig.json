{
  /* ——— project-wide compiler flags ——— */
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "isolatedModules": true,

    /* ——— path aliases ——— */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      /* every  import Image from "next/image"  →  components/LazyImage.tsx */
      "next/image": ["components/LazyImage.tsx"]
    },

    /* let the Next.js plugin add its own types automatically */
    "plugins": [{ "name": "next" }]
  },

  /* files the compiler must see */
  "include": ["next-env.d.ts", ".next/types/**/*.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
